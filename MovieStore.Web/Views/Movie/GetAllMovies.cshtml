@model IEnumerable<MovieSystem.Web.Models.MovieModels.MovieViewModel>

@{
    ViewData["Title"] = "List Movies";
}

<h1>List of Movies</h1>
<p>
    <a asp-action="AddMovie">Create New Movie</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DirectorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProducingCompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DirectorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProducingCompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GenreName)
                </td>
                <td>
                    <a asp-action="DetailsMovie" asp-route-id="@item.Id">Details</a>
                    <a asp-action="EditMovie" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="DeleteMovie" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete Movie:@item.Title')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
