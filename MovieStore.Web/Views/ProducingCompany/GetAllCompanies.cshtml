@model IEnumerable<MovieStore.Web.Models.ProducingCompanyModels.ProducingCompanyViewModel>

@{
    ViewData["Title"] = "List Producing Companies";
}

<h1>List of Producing Companies</h1>

<p>
    <a asp-action="AddCompany">Add New Producing Company</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfEstablishment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfEstablishment)
                </td>
                <td>
                    <a asp-action="EditCompany" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="DeleteCompany" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

